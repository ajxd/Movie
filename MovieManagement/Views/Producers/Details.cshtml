@model Producer

@{
    ViewData["Title"] = "Details of " + Model.FullName;
}

<style>
    body {
        background-color: #f4f4f4;
    }

    .details-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
    }

    .producer-card {
        width: 100%;
        max-width: 450px;
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: box-shadow 0.3s ease-in-out;
    }

        .producer-card:hover {
            box-shadow: 0 12px 28px rgba(0, 0, 0, 0.2);
        }

    .producer-image {
        width: 100%;
        height: 350px;
        object-fit: cover;
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
    }

    .producer-details {
        padding: 20px;
        background: #fafafa; /* Slightly off-white for the details background */
        border-bottom-left-radius: 8px;
        border-bottom-right-radius: 8px;
    }

        .producer-details h1 {
            font-size: 26px;
            color: #333;
            margin-bottom: 10px;
        }

    .producer-bio {
        font-size: 16px;
        color: #666;
        line-height: 1.5;
    }

    .buttons {
        margin-top: 20px;
        text-align: center;
    }

    .btn-custom {
        padding: 10px 20px;
        border-radius: 30px;
        font-size: 16px;
        color: #fff;
        background: #007bff; /* Primary blue for action buttons */
        border: none;
        transition: background-color 0.2s, transform 0.2s;
    }

        .btn-custom:hover {
            background: #0056b3;
            transform: translateY(-2px);
        }

    .btn-secondary-custom {
        background: #6c757d;
    }

        .btn-secondary-custom:hover {
            background: #545b62;
        }
</style>

<div class="container">
    <div class="row details-container">
        <div class="producer-card">
            <img src="@Model.ProfilePictureURL" alt="Profile Picture of @Model.FullName" class="producer-image">
            <div class="producer-details">
                <h1>@Model.FullName</h1>
                <p class="producer-bio">@Model.Bio</p>
                <div class="buttons">
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <a class="btn btn-custom" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                    }
                    <a class="btn btn-custom btn-secondary-custom" asp-action="Index">Show All</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ProfilePictureURL").val();
        });
    </script>
}
