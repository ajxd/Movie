<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Movie Tickets</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
    <!-- Custom CSS for additional styling -->
    <link rel="stylesheet" href="~/css/site.css" />
    <!-- Bootstrap icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
    <style>
        /* Custom navbar styles */
        .navbar-custom {
            background-color: #203647; /* Dark blue background */
        }

        .navbar-brand-custom {
            color: #f0f0f0; /* Lighter text color for brand */
            font-weight: bold; /* Bold font weight */
        }

        .navbar-nav-custom .nav-link {
            color: #f0f0f0; /* Lighter text color for links */
            transition: color 0.3s; /* Smooth transition for link color */
        }

            .navbar-nav-custom .nav-link:hover {
                color: #ffd166; /* Yellow color on hover */
            }

        .navbar-toggler-custom {
            border-color: #f0f0f0; /* Lighter border color for toggler */
        }

        .navbar-toggler-icon-custom {
            background-color: #f0f0f0; /* Lighter background color for toggler icon */
        }

        /* Custom footer styles */
        .footer-custom {
            background-color: #203647; /* Dark blue background */
            color: #f0f0f0; /* Lighter text color for footer */
        }

        /* Custom button gradient */
        .btn-custom-gradient {
            background-image: linear-gradient(to top, #d299c2 0%, #fef9d7 100%);
            color: #203647; /* Dark blue text to match the navbar for contrast */
            border: none; /* Removes default border */
        }

            .btn-custom-gradient:hover {
                background-image: linear-gradient(to top, #c285b8 0%, #f7f4d3 100%);
                color: #1a2c42; /* Slightly darker text on hover */
            }

    </style>
</head>
<body>
    <header>
        <!-- Customized navbar -->
        <nav class="navbar navbar-expand-md navbar-custom border-bottom border-custom shadow-sm mb-4">
            <div class="container-fluid">
                <a class="navbar-brand navbar-brand-custom" asp-controller="Movies" asp-action="Index">Movie Tickets</a>
                <button class="navbar-toggler navbar-toggler-custom" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportContent" aria-controls="navbarSupportContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon navbar-toggler-icon-custom"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportContent">
                    <ul class="navbar-nav navbar-nav-custom me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Movies" asp-action="Index"><i class="bi bi-film"></i> Movies</a>
                        </li>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Cinemas" asp-action="Index"><i class="bi bi-camera-reels"></i> Cinemas</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Producers" asp-action="Index"><i the "bi bi-headset"></i> Producers</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Actors" asp-action="Index"><i class="bi bi-person-square"></i> Actors</a>
                            </li>
                        }
                    </ul>
                    <form class="d-flex" asp-controller="Movies" asp-action="Filter">
                        <input class="form-control me-2" name="searchString" type="search" placeholder="Search for a movie..." aria-label="Search">
                        <button class="btn btn-outline-success btn-custom-gradient" type="submit"><i class="bi bi-search"></i></button>
                    </form>
                    <ul class="navbar-nav">
                        @await Component.InvokeAsync("ShoppingCartSummary")
                    </ul>
                    <partial name="_Identity.cshtml" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="footer-custom text-muted py-3 mt-4">
        <div class="container">
            <!-- Footer content -->
        </div>
    </footer>
    <!-- Latest compiled JavaScript -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
