@using MovieManagement.Data.ViewModels;
@model RegisterVM;

@{
    ViewData["Title"] = "Sign up for a new account";
}

<style>
    body {
        background-color: #f8f9fa; /* Light background color */
    }

    .form-control {
        border-radius: 10px; /* Rounded input fields */
        border: 1px solid #ced4da; /* Border color */
    }

    .btn-outline-success {
        border-radius: 10px; /* Rounded outline success button */
        border: 1px solid #28a745; /* Button border color */
        color: #28a745; /* Button text color */
        transition: all 0.3s ease; /* Smooth transition */
    }

        .btn-outline-success:hover {
            background-color: #28a745; /* Change background color on hover */
            color: #fff; /* Change text color on hover */
        }

    .btn-outline-secondary {
        border-radius: 10px; /* Rounded outline secondary button */
        border: 1px solid #6c757d; /* Button border color */
        color: #6c757d; /* Button text color */
        transition: all 0.3s ease; /* Smooth transition */
    }

        .btn-outline-secondary:hover {
            background-color: #6c757d; /* Change background color on hover */
            color: #fff; /* Change text color on hover */
        }
</style>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-body">
                <h4 class="card-title text-center mb-4">Sign up for a new account</h4>

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger" role="alert">
                        <strong>Sorry!</strong> - @TempData["Error"]
                    </div>
                }

                <form asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="FullName" class="form-label">Full Name</label>
                        <input asp-for="FullName" class="form-control" placeholder="Enter your full name" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="EmailAddress" class="form-label">Email Address</label>
                        <input asp-for="EmailAddress" class="form-control" placeholder="Enter your email" />
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                        <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm your password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button class="btn btn-outline-success btn-lg" type="submit">Sign up</button>
                        <a class="btn btn-outline-secondary btn-lg" asp-controller="Movies" asp-action="Index">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
